{
  "manifest_version": 3,
  "name": "DeepCheck Guardian",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "webNavigation",
    "offscreen",
    "clipboardRead",
    "downloads",
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}